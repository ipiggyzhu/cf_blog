# EditorConfig: https://EditorConfig.org

# 顶级配置文件
root = true

# 所有文件的默认设置
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown文件
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# JSON文件
[*.json]
indent_size = 2

# YAML文件
[*.{yml,yaml}]
indent_size = 2

# Shell脚本
[*.sh]
end_of_line = lf

# Windows批处理和PowerShell
[*.{bat,ps1}]
end_of_line = crlf

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx,vue}]
indent_size = 2

